{
  // JS Files
  "root": true,
  "env": {
    "atomtest": true,
    "es6": true,
    "node": true,
    "browser": true,
    "jasmine": true
  },
  "globals": { "atom": "readonly", "measure": "readonly" },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": { "jsx": true },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["only-warn"],
  "extends": ["eslint:recommended"],
  "overrides": [

    /* JSON files */

    {
      "files": ["*.json"],
      "plugins": ["json"],
      "extends": ["plugin:json/recommended"],
      "rules": {
        "json/*": ["error", {"allowComments": true}]
      }
    }

