{
  "name": "atom-ide-datatip",
  "main": "./dist/main.js",
  "version": "0.11.4",
  "description": "A replacement for the Data Tooltip provider that was originally part of the Atom IDE package from Facebook.",
  "keywords": [
    "atom-package",
    "atom-ide",
    "datatip"
  ],
  "repository": "https://github.com/atom-ide-community/atom-ide-datatip",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext js,json",
    "test-debug": "npm run debug && atom --test spec",
    "test": "npm run build && atom --test spec",
    "clean": "shx rm -rf dist",
    "debug": "npm run clean && shx cp -r lib dist && NODE_ENV=development BABEL_ENV=development babel dist --out-dir dist",
    "dev": "npm run clean && NODE_ENV=development BABEL_ENV=production rollup -c -w",
    "build": "npm run clean && NODE_ENV=production BABEL_ENV=production rollup -c",
    "ppublish": "bash ./ppublish.sh",
    "prepare": "npm run build"
  },
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "package-deps": [
    "atom-ide-markdown-service",
    "busy-signal"
  ],
  "dependencies": {
    "atom-package-deps": "^5.1.0",
    "dompurify": "^2.0.8",
    "etch": "^0.14.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/atom": "^1.40.2",
    "@types/dompurify": "^2.0.1",
    "@types/node": "^13.11.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "atom-languageclient": "^0.9.9",
    "jasmine": "^3.5.0",
    "@types/jasmine": "^3.5.10",
    "atom-jasmine3-test-runner": "^4.4.4",
    "prettier": "^1.18.2",
    "eslint": "latest",
    "babel-eslint": "latest",
    "eslint-plugin-json": "latest",
    "eslint-plugin-only-warn": "latest",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitlint": "^8.3.5",
    "husky": "^4.2.5",
    "rollup": "^2.6.1",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-commonjs": "^11.1.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^5.3.0",
    "shx": "^0.3.2",
    "@babel/core": "^7.9.0",
    "@babel/cli": "^7.8.4",
    "@babel/plugin-transform-modules-commonjs": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3"
  },
  "atomTestRunner": "./spec/runner",
  "activationHooks": [
    "core:loaded-shell-environment"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },

  "providedServices": {
    "datatip": {
      "versions": {
        "0.1.0": "provideDatatipService"
      }
    }
  },
  "consumedServices": {
    "markdown-renderer": {
      "versions": {
        "1.0.0": "consumeMarkdownRenderer"
      }
    }
  }
}
